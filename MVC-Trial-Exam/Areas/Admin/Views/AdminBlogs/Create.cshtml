@{
    ViewData["Title"] = "Create Blog"; 
}

@model AdminBlogCreateVM

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Create Blog</h6>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control" asp-for="Title">
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <input asp-for="Description" class="form-control" asp-for="Description">
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Author" class="form-label">Author</label>
                    <input asp-for="Author" class="form-control" asp-for="Author">
                    <span asp-validation-for="Author"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ImgUrl" class="form-label">ImgUrl</label>
                    <input asp-for="ImgUrl" class="form-control" asp-for="ImgUrl">
                    <span asp-validation-for="ImgUrl"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>